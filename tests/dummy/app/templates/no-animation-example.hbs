<h2 style="margin-top:0px">No Animation Example</h2>

<EmberCliWizard @wizardData={{this.wizardData}} @submitAction="submitAction" @cancelAction="cancelAction" @animate={{false}} as |currentState|>
    <currentState.step @stepId="1" @wizardCurrentState={{currentState}}>
        <p>Step 1</p>
    </currentState.step>

    <currentState.step @stepId="2" @wizardCurrentState={{currentState}}>
        <p>Step 2</p>
    </currentState.step>

    <currentState.step @stepId="3" @wizardCurrentState={{currentState}}>
        <p>Step 3</p>
    </currentState.step>
</EmberCliWizard>
